

<!DOCTYPE html>
<html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
<body>

    <canvas id="myChart" style="width:100%;max-width:600px"></canvas>

    <script>
var xValues = ["İtalya", "Fransa", "İspanya", "ABD", "Arjantin"];
var yValues = [55, 49, 44, 24, 37];
var barColors = ["red", "purple","blue","orange","pink"];

new Chart("myChart", {
  type: "bar",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    legend: {display: false},
    title: {
      display: true,
      text: "Dünya Şarap Üretimi @DateTime.Now.Year"
    }
  }
});
    </script>

</body>
</html>


